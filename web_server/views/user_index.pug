doctype html
html
  head
    script(src!='script/script.js')
    style.
      html {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      body {
        background-color: grey;
        margin: 0;
        padding: 0;
      }
      div.content {
        background-color: white;
        width: 1000pt;
        height: 80vh;
        margin-left: auto;
        margin-right: auto;
        margin-top: 7vh;
        padding: 20pt;
        position: relative;
      }
      h1 {
        margin: 0;
        text-align: center;
      }
      div.inner {
        display: table;
        width: 100%;
        margin-top: 20pt;
      }
      div.line {
        display: table-row;
      }
      div.left {
        display: table-cell;
        vertical-align: top;
        padding: 5pt;
      }
      div.right {
        display: table-cell;
        vertical-align: top;
        width: 300pt;
        padding: 5pt;
      }
      div#map {
        width: 100%;
        height: 100%;
      }
      th {
        width: 1pt;
        vertical-align: top;
      }
      #info {
        border: 1px solid black;
        padding: 10pt;
        padding-top: 20pt;
      }

      #info.disabled {
        border: 1px solid grey;
        color: grey;
      }
    title Bicycles Availability
  body
    div.content
      h1 Available bicycles
      div.inner(style='height: 95%;')
        div.line
          div.left(style='text-align: center;')
            button#button-available(disabled='true') Available Bicycles
            button#button-empty Empty Slots
          div.right
        div.line(style='height: 100%;')
          div.left
            div#map
          div.right#info.disabled
            table(style='text-align: left; width: 100%;')
              tr
                th name:
                td#name
              tr
                th #available:
                td#num-available
              tr
                th #empty:
                td#num-empty

